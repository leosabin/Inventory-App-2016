<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:id="@+id/leosabin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bionic Black Hawks Inventory"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textColor="#000000" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robot Components"
        android:id="@+id/robotcomponents"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batteries"
        android:id="@+id/batteries"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/robotcomponents"
        android:layout_alignLeft="@+id/robotcomponents"
        android:layout_alignStart="@+id/robotcomponents" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasteners"
        android:id="@+id/fasteners"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/batteries"
        android:layout_alignLeft="@+id/batteries"
        android:layout_alignStart="@+id/batteries" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tools"
        android:id="@+id/tools"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fasteners"
        android:layout_alignLeft="@+id/fasteners"
        android:layout_alignStart="@+id/fasteners" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Team Supplies"
        android:id="@+id/generalteamsupplies"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tools"
        android:layout_alignLeft="@+id/tools"
        android:layout_alignStart="@+id/tools" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Assets"
        android:id="@+id/teamassets"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/generalteamsupplies"
        android:layout_alignLeft="@+id/generalteamsupplies"
        android:layout_alignStart="@+id/generalteamsupplies" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Room"
        android:id="@+id/stockroom"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/teamassets"
        android:layout_alignLeft="@+id/teamassets"
        android:layout_alignStart="@+id/teamassets" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legacy"
        android:id="@+id/radioButton"
        android:checked="false"
        android:textSize="30dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/stockroom"
        android:layout_alignLeft="@+id/stockroom"
        android:layout_alignStart="@+id/stockroom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name and Model #:"
        android:id="@+id/namemodel"
        android:layout_alignLeft="@+id/quantity"
        android:layout_alignStart="@+id/quantity"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/robotcomponents"
        android:layout_toRightOf="@+id/generalteamsupplies"
        android:layout_toEndOf="@+id/generalteamsupplies" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units:"
        android:id="@+id/units"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/tools"
        android:layout_alignRight="@+id/minus"
        android:layout_alignEnd="@+id/minus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/location"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/generalteamsupplies"
        android:layout_alignRight="@+id/units"
        android:layout_alignEnd="@+id/units" />

    <Button
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Submit"
        android:id="@+id/submit"
        android:textSize="30dp"
        android:layout_alignTop="@+id/stockroom"
        android:layout_toRightOf="@+id/minus"
        android:layout_toEndOf="@+id/minus"
        android:layout_alignBottom="@+id/radioButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/units"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/locationtext"
        android:layout_alignBottom="@+id/location"
        android:layout_toRightOf="@+id/location"
        android:layout_toEndOf="@+id/location" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/unitstext"
        android:layout_above="@+id/generalteamsupplies"
        android:layout_toRightOf="@+id/units"
        android:layout_toEndOf="@+id/units" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/plus"
        android:textSize="30dp"
        android:layout_alignTop="@+id/minus"
        android:layout_toRightOf="@+id/namemodel"
        android:layout_toEndOf="@+id/namemodel" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/minus"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toLeftOf="@+id/namemodel" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:text="Quantity"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/plus"
        android:layout_toLeftOf="@+id/plus"
        android:layout_toStartOf="@+id/plus" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameandmodeltext"
        android:layout_toRightOf="@+id/namemodel"
        android:layout_toEndOf="@+id/namemodel"
        android:layout_alignBottom="@+id/namemodel" />

</RelativeLayout>
